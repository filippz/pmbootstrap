pkgname=device-nokia-n9
pkgver=1
pkgrel=14
pkgdesc="Nokia N9"
url="https://github.com/postmarketOS"
arch="noarch"
license="MIT"
depends="linux-nokia-n9 linux-firmware"
makedepends=""
install=""
subpackages=""
source="
	deviceinfo
	initfs-hook.sh
	kick_watchdogs.sh
	$install
"
options="!check"

build() {
	return 0
}

package() {
	install -D -m644 "$srcdir"/deviceinfo \
		"$pkgdir"/etc/deviceinfo
	install -D -m644 "$srcdir"/initfs-hook.sh \
		"$pkgdir"/etc/postmarketos-mkinitfs/hooks/00-${pkgname}.sh
        install -D "$srcdir"/kick_watchdogs.sh \
		"$pkgdir"/bin/kick_watchdogs.sh
}

